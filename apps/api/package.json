{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "db:generate": "prisma generate --config ./prisma.config.ts",
    "db:push": "prisma db push --config ./prisma.config.ts",
    "db:migrate": "prisma migrate dev --config ./prisma.config.ts",
    "db:migrate:deploy": "prisma migrate deploy --config ./prisma.config.ts",
    "db:studio": "prisma studio --config ./prisma.config.ts",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/type-provider-typebox": "^4.0.1",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.1.0",
    "pg": "^8.13.1",
    "zod": "^3.23.8",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pg": "^8.11.10",
    "pino-pretty": "^13.0.0",
    "prisma": "^7.2.0",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
